<div class="contenido p-5">
<h2>Listado de Artistas</h2>



<table class="table table-striped">
   <tr>
    <th> Nombre </th>
    <th> Apellido </th>
     <th><i class="fas fa-trash " style="color: cornflowerblue;"></i> </th>

     <th><i class="fas fa-pencil-alt"></i></th>
    </tr> 


    {{#each listado}}

    <tr>
        <td>{{this.nombre}}</td>
        <td>{{this.apellido}}</td>
        <td> <a href="/borrar/{{this._id}}"> Borrar </a></td>
        <td> <a href="/editar/{{this._id}}"> Editar </a></td>
        
    </tr>

    {{/each}}


</table>
<a href="/alta" class="btn btn-primary">agregar artista</a>
</div>